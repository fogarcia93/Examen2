<p id="notice"><%= notice %></p>

<h1>Agenda en Rails</h1>
  <div class="parallax-container">
   <div class="parallax"><img src="pa1.png"></div>
    
<table class="highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.contact_id %></td>
        <td><%= book.name %></td>
        <td><%= book.email %></td>
        <td><%= book.phone %></td>
        <td>
	<a href= "/books/<%= book.id%>"class="waves-effect waves-light btn">Mostrar</a>
	</td>
        <td>
	<a href= "/books/<%= book.id%>/edit"class="waves-effect waves-light btn">Editar</a>
	</td>
        <td>
	<a data-method="delete" href =/books/<%= book.id %> data-confirm="Seguro?" class="waves-effect 	          waves-light btn">Eliminar</a>	
	</td>
      </tr>
    <% end %>
  </body>
</table>

<br>
 </div>
  
